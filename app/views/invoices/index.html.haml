.page-header
  %h1 Listing Invoices

%table.table
  %tr
    %th Invoice #
    %th Desc
    %th Status
    %th Customer
    %th
    %th
    %th

  - @invoices.each do |invoice|
    %tr
      %td= invoice.id
      %td= invoice.short_desc
      %td
        %span.label= invoice.status
      %td= invoice.customer.name
      %td= link_to 'Show', invoice
      %td= link_to 'Edit', edit_invoice_path(invoice)
      %td= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' }

%br

.btn= link_to 'New Invoice', new_invoice_path
